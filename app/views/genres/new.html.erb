<div class="container">
    <div class="row">
        <div class="col-12 mt-4">
            <h2>Добавить жанр</h2>
            <%= form_with(model: @author, url: '/genres/add', method: 'post') do |form| %>
                <div class="form-group">
                    <%= form.label :name, 'Название' %>
                    <%= form.text_field :name, name: 'genre[name]', class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= form.label :description, 'Описание' %>
                    <%= form.text_area :description, name: 'genre[description]', class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= form.submit 'Добавить', class: 'btn btn-success' %>
                    <a href="/books/new" class="btn btn-info">Назад</a>
                </div>
            <% end %>
        </div>
    </div>
</div>
